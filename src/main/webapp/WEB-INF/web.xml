<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>srg.accountsadministrator.Login</servlet-class>
        <init-param>
            <param-name>database_path</param-name>
            <param-value>C:\database\accounts_base.db</param-value>
        </init-param>
        <init-param>
            <param-name>jdbc_class_name</param-name>
            <param-value>org.sqlite.JDBC</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AccountsList</servlet-name>
        <servlet-class>srg.accountsadministrator.AccountsList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>srg.accountsadministrator.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountCreator</servlet-name>
        <servlet-class>srg.accountsadministrator.AccountCreator</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountRemover</servlet-name>
        <servlet-class>srg.accountsadministrator.AccountRemover</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountEditor</servlet-name>
        <servlet-class>srg.accountsadministrator.AccountEditor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountsList</servlet-name>
        <url-pattern>/accounts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountCreator</servlet-name>
        <url-pattern>/create_account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountRemover</servlet-name>
        <url-pattern>/remove_account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountEditor</servlet-name>
        <url-pattern>/edit_account</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
</web-app>
